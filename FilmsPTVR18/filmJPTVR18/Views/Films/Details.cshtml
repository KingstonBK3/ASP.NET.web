@model filmJPTVR18.Models.Film

@{
    ViewBag.Title = "Details";
}
<div class="container-fluid mt-2">
    <div class="row justify-content-center">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2><a href="#">@Model.Title</a></h2>
            </div>
            <div class="col-md-3">
                @if (Model.Image != null)
                {
                    <img src="@Url.Action("GetImage", new { Model.Id })" class="img-thumbnail" />
                }
            </div>
            <div class="col-md-6">
                <div>
                    <b>Описание:</b><br />
                    @Model.Description
                </div>
                <div>
                    <b>Год выхода:</b>
                    @Model.Year
                </div>
                <div>
                    <b>Страна:</b>
                    @Model.Country
                </div>
                <div>
                    <b>Актеры:</b>
                    @{Html.RenderAction("GetFilmAuthors", "Home", new { id = Model.Id });}
                </div>
            </div>
        </div>
    </div>
</div>
