@model FilmsProjectPTVR18.Models.Actor

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-8">
            <h3>Actor: @Model.FirstName @Model.LastName</h3>
            <hr />
            <div class="row">
                <div class="col-md-2">
                    <img src="@Url.Action("GetImage", new { id = Model.Id })" alt="Alternate Text" class="img" />
                </div>
                <div class="col-md-10">
                    <h4>Filmography:</h4>
                    @{ Html.RenderAction("getActorFilm", new { id = Model.Id }); }
                </div>
            </div>
        </div>
    </div>
</div>
